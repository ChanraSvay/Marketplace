<section class="form-auth text center">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.email_field :email, autofocus: true, class: "form-control", id: "inputEmail", placeholder: "Email address", autocomplete: "new-email" %>
    <%= f.text_field :username, autofocus: true, class: "form-control", id: "inputUsername", placeholder: "Username", autocomplete: "new-username" %>
   <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
  <%= f.password_field :password, class: "form-control", id: "inputPassword", placeholder: "Password", autocomplete: "new-password"  %>
  <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password confirmation", autocomplete: "new-password"  %>
      <input type="checkbox" value="remember-me"> Remember me
  <button class="btn btn-lg btn-primary btn-block" type="submit">Sign Up</button>
<% end %>

<%= render "devise/shared/links" %>
