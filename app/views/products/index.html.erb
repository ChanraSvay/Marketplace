    <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-6">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-6 mb-3 border-bottom">
        <div class="btn-toolbar mb-2 mb-md-0">
          <div class="btn-group mr-6">
          </div>
          </div>
          </div>
<p id="notice"><%= notice %></p>

<h1 class="h3">Products</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Condition</th>
      <th>Sold</th>
      <th>User</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.condition %></td>
        <td><%= product.sold %></td>
        <td><%= product.user_id %></td>
        <td><%= product.category_id %></td>
        <%# <td><%= button_to 'Buy now!', checkout_create_path %></td>
        <%# <td><%= button_to "Submit Payment", checkout_create_path, params: {:product_id => product.id }, remote: true %></td>
        <td><%= link_to 'Show', product, class: "btn btn-info" %></td>
        <% if current_user && current_user.id == product.user_id %>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-secondary" %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-dark" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

