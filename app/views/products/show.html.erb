<p id="notice"><%= notice %></p>

<div>
<% if @product.picture.attached? %>
  <%= image_tag @product.picture, alt: @product.title %>
  <% else %>
  <%= image_tag "https://ibb.co/G7Qpsyv", alt: @product.title %>
  <% end %>
</div>

<% if @product.sold %>
<h2>SOLD</h2>
<% elsif current_user && !@product.sold %>
<%= button_to "Buy now", place_order_path %>
<% else %>
<p> Please log in to purchase</p>
<% end %>
<p>
  <%= @product.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @product.price %>
</p>

<p>
  <strong>Condition:</strong>
  <%= @product.condition %>
</p>

<p>
  <strong>Sold:</strong>
  <%= @product.sold %>
</p>

<p>
  <strong>User:</strong>
  <%= @product.user_id %>
</p>

<p>
  <strong>Category:</strong>
  <%= @product.category_id %>
</p>

<% if current_user && current_user.id == @product.user_id %>
<%= link_to 'Edit', edit_product_path(@product) %> |
<% end %>
<%= link_to 'Back', products_path %>
